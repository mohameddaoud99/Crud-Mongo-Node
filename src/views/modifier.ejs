<div class="container col-4 col-md-4">
    <h1>Modifier une Personne</h1>
    <form method="post" action="/modifier/<%= id  %>">
        <div class="form-group">
            <input type="text" class="form-control" id="numero" name="numero" value="<%= result.titulo %>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="nom" name="nom" value="<%= result.descripcion %>">
        </div>
       

        <button type="submit" class="btn btn-primary">Modifier</button>
    </form>
</div>